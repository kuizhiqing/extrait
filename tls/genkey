openssl genpkey -algorithm RSA -out ca.key
openssl req -new -nodes -x509 -key ca.key -out ca.crt -days 365 -subj "/C=CN/ST=Beijing/L=Beijing/O=Company/OU=IT/CN=CA"

openssl genpkey -algorithm RSA -out server.key 
openssl req -new -key server.key -out server.csr -subj "/C=CN/ST=Beijing/L=Beijing/O=Company/OU=IT/CN=localhost"
openssl x509 -req -days 365 -CA ca.crt -CAkey ca.key -CAcreateserial -in server.csr -out server.crt

openssl x509 -text -noout -in server.crt
